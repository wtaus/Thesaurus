{
    "name": "The Thesaurus",
    "author": "Wunderman Thompson",
    "description": "A well-spoken dinosaur that puts complicated climate change terms into easy-to-understand language.",
    "version": "1.0",
    "manifest_version": 2,
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon.png"
      },

      "browser_action": {
        "default_icon": "icon.png",
        "default_title": "UNDP Thesaurus", 
        "default_popup": "popup.html"
      },

    "permissions": ["activeTab"],
    "web_accessible_resources": ["*.png", "*.woff"],
    "background": {
      "persistent": false,
      "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["main.js"],
            "css": ["main.css"],
            "run_at": "document_end",
            "all_frames": true
        }
      ]

      


      



    
}